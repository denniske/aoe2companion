{
    "compilerOptions": {
      "baseUrl": "./",
      "watch": false,
      "outDir": "./dist",
      "sourceMap": true,
      "declaration": false,
      "downlevelIteration": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "importHelpers": true,
      "resolveJsonModule": true,
      "target": "es5",
      "strict": true,
      "noImplicitAny": false,
      "strictNullChecks": false,
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2018"
      ]
    },
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
